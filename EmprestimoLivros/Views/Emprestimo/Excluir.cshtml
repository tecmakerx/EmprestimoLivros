@model EmprestimosModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["title"] = "Excluir Empréstimo";

}

<div class="container  bg-dark p-5 rounded-3 w-50">

    <div class="mb-4 text-center">
        <h2 class="text-light"> Exclusão de Empréstimos</h2>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for=Id />
        <h5 class="text-light">Tem certeza que deseja excluir o registro abaixo?</h5>

        <div class="mb-1">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-1">
            <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando o livro?" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>


        <div class="mb-1">
            <label for="Livro" class="form-label text-light">Livro</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual é o livro emprestado?" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-4">
            <button type="submit" class="btn btn-secondary btn-sm w-50">Excluir</button>

            <a class="btn btn-primary btn-sm w-50 " asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>



    </form>
</div>